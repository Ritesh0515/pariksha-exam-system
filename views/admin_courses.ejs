<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
    <title>Manage Courses | Pariksha Admin</title>
    <style>
        .glass-card { transition: all 0.3s ease; }
        .course-badge {
            background-color: #f0fdf4;
            color: #16a34a;
            font-weight: 700;
            padding: 6px 16px;
            border-radius: 10px;
            border: 1px solid #dcfce7;
        }
    </style>
</head>
<body class="bg-light">
<div class="container-fluid">
    <div class="row">
        <%- include('partials/sidebar', {currentPage: 'courses'}) %>

        <div class="col-md-10 offset-md-2 p-5">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="fw-bold text-dark mb-0">Course Management</h2>
                    <p class="text-muted small">Add and manage main academic departments (BBA, BBA-CA, MBA, etc.).</p>
                </div>
            </div>

            <% if (user.role !== 'staff') { %>
            <div class="card glass-card p-4 border-0 shadow-sm border-top border-4 border-primary mb-5">
                <h5 class="fw-bold mb-3">Add New Course</h5>
                <form action="/admin/courses/add" method="POST" class="row g-3">
                    <div class="col-md-9">
                        <input type="text" name="course_name" class="form-control bg-light border-0 p-3" placeholder="e.g. BBA-CA" required>
                    </div>
                    <div class="col-md-3">
                        <button type="submit" class="btn btn-primary w-100 shadow-sm fw-bold p-3">
                            <i class="bi bi-plus-lg me-2"></i>Add Course
                        </button>
                    </div>
                </form>
            </div>
            <% } %>

            <div class="card border-0 shadow-sm overflow-hidden rounded-4">
                <table class="table mb-0 align-middle table-hover bg-white">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4 py-3">Course ID</th>
                            <th>Course Name</th>
                            <th class="text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (courses.length > 0) { %>
                            <% courses.forEach(c => { %>
                            <tr>
                                <td class="ps-4 text-muted small">#<%= c.course_id %></td>
                                <td class="fw-bold text-dark"><%= c.course_name %></td>
                                <td class="text-end pe-4">
                                    <% if (user.role !== 'staff') { %>
                                        <button class="btn btn-sm btn-outline-danger px-3 rounded-pill" 
                                            onclick="handleCourseDelete('<%= c.course_id %>')">
                                            <i class="bi bi-trash me-1"></i>Delete
                                        </button>
                                    <% } else { %>
                                        <span class="badge bg-secondary-subtle text-secondary rounded-pill">View Only</span>
                                    <% } %>
                                </td>
                            </tr>
                            <% }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="3" class="text-center py-5">
                                    <p class="text-muted mb-0">No courses added yet.</p>
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    function handleCourseDelete(id) {
        Swal.fire({
            title: 'Delete Course?',
            text: "This is a critical action! It will affect all subjects and exams linked to this course.",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = '/admin/courses/delete/' + id;
            }
        });
    }
</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>