<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
    <title>Manage Exams | Pariksha</title>
</head>
<body>
<div class="container-fluid">
    <div class="row">
        <%- include('partials/sidebar', {currentPage: 'exams'}) %>

        <div class="col-md-10 offset-md-2 p-5">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="fw-bold">Exam Management</h2>
                <button class="btn btn-primary shadow-sm" data-bs-toggle="collapse" data-bs-target="#addExamForm">
                    <i class="bi bi-plus-lg me-2"></i>Create New Exam
                </button>
            </div>

            <div class="collapse mb-4" id="addExamForm">
                <div class="card glass-card p-4 border-0 shadow-sm">
                    <form action="/admin/exams/add" method="POST" class="row g-3">
                        <div class="col-md-4">
                            <label class="form-label small fw-bold">Course Subject</label>
                            <select name="subject_id" class="form-select border-0 bg-light" required>
                                <% subjects.forEach(sub => { %>
                                    <option value="<%= sub.subject_id %>"><%= sub.subject_name %></option>
                                <% }) %>
                            </select>
                        </div>
                        <div class="col-md-8">
                            <label class="form-label small fw-bold">Exam Title</label>
                            <input type="text" name="exam_name" class="form-control border-0 bg-light" required>
                        </div>
                        <div class="col-md-4"><label class="small fw-bold">Duration (Mins)</label><input type="number" name="duration_minutes" class="form-control bg-light border-0" required></div>
                        <div class="col-md-4"><label class="small fw-bold">Total Marks</label><input type="number" name="total_marks" class="form-control bg-light border-0" required></div>
                        <div class="col-md-4"><label class="small fw-bold">Pass Marks</label><input type="number" name="pass_marks" class="form-control bg-light border-0" required></div>
                        <div class="col-12 text-end"><button type="submit" class="btn btn-success px-4">Save Exam</button></div>
                    </form>
                </div>
            </div>

            <div class="card glass-card border-0 shadow-sm overflow-hidden">
                <table class="table mb-0 align-middle">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Exam Name</th>
                            <th>Subject</th>
                            <th>Stats</th>
                            <th>Status</th>
                            <th class="text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% exams.forEach(exam => { %>
                        <tr>
                            <td class="ps-4 fw-semibold"><%= exam.exam_name %></td>
                            <td><span class="badge bg-primary-subtle text-primary"><%= exam.subject_name %></span></td>
                            <td><small class="text-muted"><%= exam.duration_minutes %>m | <%= exam.total_marks %> Marks</small></td>
                            <td><span class="badge bg-success-subtle text-success">Active</span></td>
                            <td class="text-end pe-4">
                                <div class="btn-group">
                                    <a href="/admin/exams/<%= exam.exam_id %>/questions" class="btn btn-sm btn-outline-primary" title="Manage Questions">
                                        <i class="bi bi-list-check"></i>
                                    </a>
                                    <button class="btn btn-sm btn-outline-secondary" title="Edit" 
                                        onclick="openEditModal('<%= exam.exam_id %>', '<%= exam.exam_name %>', '<%= exam.duration_minutes %>', '<%= exam.pass_marks %>')">
                                        <i class="bi bi-pencil"></i>
                                    </button>
                                    <a href="/admin/exams/delete/<%= exam.exam_id %>" class="btn btn-sm btn-outline-danger" title="Delete" 
                                        onclick="return confirm('Are you sure? All questions in this exam will be lost.')">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="editExamModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">Edit Exam Details</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form id="editExamForm" action="/admin/exams/update" method="POST">
                <input type="hidden" name="exam_id" id="edit_exam_id">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Exam Title</label>
                        <input type="text" name="exam_name" id="edit_exam_name" class="form-control" required>
                    </div>
                    <div class="row">
                        <div class="col-6 mb-3">
                            <label class="form-label">Duration (Min)</label>
                            <input type="number" name="duration_minutes" id="edit_duration" class="form-control" required>
                        </div>
                        <div class="col-6 mb-3">
                            <label class="form-label">Pass Marks</label>
                            <input type="number" name="pass_marks" id="edit_pass_marks" class="form-control" required>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Update Exam</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function openEditModal(id, name, duration, pass) {
        document.getElementById('edit_exam_id').value = id;
        document.getElementById('edit_exam_name').value = name;
        document.getElementById('edit_duration').value = duration;
        document.getElementById('edit_pass_marks').value = pass;
        document.getElementById('editExamForm').action = '/admin/exams/update/' + id;
        new bootstrap.Modal(document.getElementById('editExamModal')).show();
    }
</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>