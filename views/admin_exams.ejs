<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
    <title>Manage Exams | Pariksha</title>
    <style>
        .glass-card { transition: all 0.3s ease; border-radius: 15px; }
        .badge-info { background-color: #e0f2fe; color: #0369a1; }
        .chained-select:disabled { background-color: #f8fafc !important; cursor: not-allowed; }
    </style>
</head>
<body class="bg-light">
<div class="container-fluid">
    <div class="row">
        <%- include('partials/sidebar', {currentPage: 'exams'}) %>

        <div class="col-md-10 offset-md-2 p-5">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="fw-bold text-dark mb-0">Exam Management</h2>
                    <p class="text-muted small">Create and organize exams by Course, Year, and Subject.</p>
                </div>
                <button class="btn btn-primary shadow-sm rounded-pill px-4" data-bs-toggle="collapse" data-bs-target="#addExamForm">
                    <i class="bi bi-plus-lg me-2"></i>Create New Exam
                </button>
            </div>

            <div class="collapse mb-4" id="addExamForm">
                <div class="card glass-card p-4 border-0 shadow-sm border-top border-4 border-primary">
                    <h5 class="fw-bold mb-3">Exam Configuration</h5>
                    <form action="/admin/exams/add" method="POST" class="row g-3">
                        <div class="col-md-3">
                            <label class="form-label small fw-bold">1. Select Course</label>
                            <select id="courseSelect" class="form-select border-0 bg-light p-2" required>
                                <option value="" selected disabled>Choose Course...</option>
                                <% courses.forEach(c => { %>
                                    <option value="<%= c.course_id %>"><%= c.course_name %></option>
                                <% }) %>
                            </select>
                        </div>

                        <div class="col-md-3">
                            <label class="form-label small fw-bold">2. Academic Year</label>
                            <select id="yearSelect" class="form-select border-0 bg-light p-2 chained-select" required disabled>
                                <option value="" selected disabled>Choose Year...</option>
                                <option value="FY">FY</option>
                                <option value="SY">SY</option>
                                <option value="TY">TY</option>
                            </select>
                        </div>

                        <div class="col-md-3">
                            <label class="form-label small fw-bold">3. Select Subject</label>
                            <select name="subject_id" id="subjectSelect" class="form-select border-0 bg-light p-2 chained-select" required disabled>
                                <option value="" selected disabled>Waiting for Year...</option>
                            </select>
                        </div>

                        <div class="col-md-3">
                            <label class="form-label small fw-bold">4. Exam Title</label>
                            <input type="text" name="exam_name" class="form-control border-0 bg-light p-2" placeholder="e.g. Unit Test 1" required>
                        </div>

                        <div class="col-md-4">
                            <label class="small fw-bold">Duration (Mins)</label>
                            <input type="number" name="duration_minutes" class="form-control bg-light border-0" placeholder="60" required>
                        </div>
                        <div class="col-md-4">
                            <label class="small fw-bold">Total Marks</label>
                            <input type="number" name="total_marks" class="form-control bg-light border-0" placeholder="100" required>
                        </div>
                        <div class="col-md-4">
                            <label class="small fw-bold">Pass Marks</label>
                            <input type="number" name="pass_marks" class="form-control bg-light border-0" placeholder="40" required>
                        </div>

                        <div class="col-12 text-end">
                            <button type="submit" class="btn btn-success px-5 rounded-pill fw-bold shadow-sm">Save Exam Configuration</button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card glass-card border-0 shadow-sm overflow-hidden rounded-4">
                <table class="table mb-0 align-middle table-hover">
                    <thead class="bg-light text-uppercase small letter-spacing-1">
                        <tr>
                            <th class="ps-4 py-3">Exam Details</th>
                            <th>Academic Info</th>
                            <th>Stats</th>
                            <th>Status</th>
                            <th class="text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% exams.forEach(exam => { %>
                        <tr>
                            <td class="ps-4">
                                <div class="fw-bold text-dark"><%= exam.exam_name %></div>
                                <div class="text-muted x-small">ID: #<%= exam.exam_id %></div>
                            </td>
                            <td>
                                <div class="fw-semibold"><%= exam.subject_name %></div>
                                <span class="badge badge-info"><%= exam.course_name %> | <%= exam.year %></span>
                            </td>
                            <td>
                                <div class="small"><i class="bi bi-clock me-1"></i><%= exam.duration_minutes %>m</div>
                                <div class="small text-muted"><i class="bi bi-award me-1"></i><%= exam.pass_marks %>/<%= exam.total_marks %> Pass</div>
                            </td>
                            <td><span class="badge bg-success-subtle text-success rounded-pill px-3">Active</span></td>
                            <td class="text-end pe-4">
                                <div class="btn-group shadow-sm rounded-3 overflow-hidden">
                                    <a href="/admin/exams/<%= exam.exam_id %>/questions" class="btn btn-sm btn-white border" title="Questions">
                                        <i class="bi bi-list-check text-primary"></i>
                                    </a>
                                    <button class="btn btn-sm btn-white border" title="Edit" 
                                        onclick="openEditModal('<%= exam.exam_id %>', '<%= exam.exam_name %>', '<%= exam.duration_minutes %>', '<%= exam.pass_marks %>')">
                                        <i class="bi bi-pencil text-secondary"></i>
                                    </button>
                                    <a href="/admin/exams/delete/<%= exam.exam_id %>" class="btn btn-sm btn-white border" title="Delete" 
                                        onclick="return confirm('Permanently delete this exam?')">
                                        <i class="bi bi-trash text-danger"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="editExamModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg rounded-4">
            <div class="modal-header bg-primary text-white border-0 py-3">
                <h5 class="modal-title fw-bold">Edit Exam Details</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form id="editExamForm" method="POST">
                <div class="modal-body p-4">
                    <div class="mb-3">
                        <label class="form-label fw-bold small">Exam Title</label>
                        <input type="text" name="exam_name" id="edit_exam_name" class="form-control bg-light border-0" required>
                    </div>
                    <div class="row">
                        <div class="col-6 mb-3">
                            <label class="form-label small">Duration (Min)</label>
                            <input type="number" name="duration_minutes" id="edit_duration" class="form-control bg-light border-0" required>
                        </div>
                        <div class="col-6 mb-3">
                            <label class="form-label small">Pass Marks</label>
                            <input type="number" name="pass_marks" id="edit_pass_marks" class="form-control bg-light border-0" required>
                        </div>
                    </div>
                </div>
                <div class="modal-footer border-0 p-4 pt-0">
                    <button type="submit" class="btn btn-primary w-100 rounded-pill fw-bold py-2">Update Configuration</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    const courseSelect = document.getElementById('courseSelect');
    const yearSelect = document.getElementById('yearSelect');
    const subjectSelect = document.getElementById('subjectSelect');

    // 1. Unlocks Year when Course is picked
    courseSelect.addEventListener('change', () => {
        yearSelect.disabled = false; // Removes the red circle from Year dropdown
        yearSelect.value = ""; 
        subjectSelect.disabled = true; // Subject stays locked until Year is selected
        subjectSelect.innerHTML = '<option value="" selected disabled>Select Year first...</option>';
    });

    // 2. Fetches Subjects and Unlocks Subject dropdown
    yearSelect.addEventListener('change', async () => {
        const courseId = courseSelect.value;
        const year = yearSelect.value;

        if (!courseId || !year) return;

        try {
            const response = await fetch(`/api/subjects-filter?course_id=${courseId}&year=${year}`);
            const subjects = await response.json();

            subjectSelect.innerHTML = '<option value="" selected disabled>Select Subject...</option>';
            
            if (subjects.length > 0) {
                subjects.forEach(sub => {
                    const opt = document.createElement('option');
                    opt.value = sub.subject_id;
                    opt.text = sub.subject_name;
                    subjectSelect.add(opt);
                });
                subjectSelect.disabled = false; // Removes the red circle from Subject dropdown
            } else {
                subjectSelect.innerHTML = '<option value="" selected disabled>No subjects found for this year</option>';
            }
        } catch (err) {
            console.error("Fetch Error:", err);
        }
    });

    // 3. Fixes the Edit Modal (restoring the missing function)
    function openEditModal(id, name, duration, pass) {
        document.getElementById('edit_exam_name').value = name;
        document.getElementById('edit_duration').value = duration;
        document.getElementById('edit_pass_marks').value = pass;
        document.getElementById('editExamForm').action = '/admin/exams/update/' + id;
        
        // Show the modal using Bootstrap global
        const myModal = new bootstrap.Modal(document.getElementById('editExamModal'));
        myModal.show();
    }
</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>