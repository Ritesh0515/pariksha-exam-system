<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
    <title>Monitoring Dashboard | Admin</title>
</head>
<body class="bg-light">
    <%- include('partials/sidebar') %>

    <div class="container py-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="fw-bold">Security & Monitoring Logs</h2>
            <button class="btn btn-outline-danger btn-sm" onclick="window.location.reload()">
                <i class="bi bi-arrow-clockwise"></i> Refresh Logs
            </button>
        </div>

        <div class="card border-0 shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-dark text-white">
                            <tr>
                                <th class="ps-4">Timestamp</th>
                                <th>Student Name</th>
                                <th>Exam</th>
                                <th>Violation Type</th>
                                <th>Details</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (logs.length > 0) { %>
                                <% logs.forEach(log => { %>
                                    <tr>
                                        <td class="ps-4 small text-muted">
                                            <%= new Date(log.created_at).toLocaleString() %>
                                        </td>
                                        <td class="fw-bold text-dark"><%= log.username %></td>
                                        <td><span class="badge bg-secondary"><%= log.exam_name %></span></td>
                                        <td>
                                            <span class="badge <%= log.event_type === 'TAB_SWITCH' ? 'bg-warning text-dark' : 'bg-danger' %>">
                                                <%= log.event_type %>
                                            </span>
                                        </td>
                                        <td class="text-muted small"><%= log.event_details %></td>
                                    </tr>
                                <% }) %>
                            <% } else { %>
                                <tr>
                                    <td colspan="5" class="text-center py-5 text-muted">No security violations recorded.</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
</html>