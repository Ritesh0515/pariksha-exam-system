<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %> <title>Question Bank | Pariksha</title>
</head>
<body class="bg-light">

<div class="container-fluid">
    <div class="row">
        <div class="col-md-2 d-none d-md-block sidebar p-4">
            <h4 class="fw-bold mb-5 text-primary">Pariksha</h4>
            <nav class="nav flex-column gap-2">
                <a class="nav-link" href="/admin/dashboard"><i class="bi bi-speedometer2 me-2"></i> Dashboard</a>
                <a class="nav-link" href="/admin/subjects"><i class="bi bi-book me-2"></i> Subjects</a>
                <a class="nav-link active" href="/admin/exams"><i class="bi bi-journal-text me-2"></i> Exams</a>
            </nav>
        </div>

        <div class="col-md-10 offset-md-2 p-5">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                          <li class="breadcrumb-item"><a href="/admin/exams">Exams</a></li>
                          <li class="breadcrumb-item active text-capitalize"><%= exam.exam_name %></li>
                        </ol>
                    </nav>
                    <h2 class="fw-bold">Manage Questions</h2>
                </div>
                
                <div class="d-flex gap-2">
                    <% if (questions.length > 0) { %>
                        <a href="/admin/questions/delete-all/<%= exam.exam_id %>" 
                           class="btn btn-outline-danger shadow-sm px-3" 
                           onclick="return confirm('WARNING: This will permanently delete ALL questions for this exam. Continue?')">
                            <i class="bi bi-trash3 me-2"></i>Clear All
                        </a>
                    <% } %>
                    <button class="btn btn-primary shadow-sm px-4" data-bs-toggle="modal" data-bs-target="#addQuestionModal">
                        <i class="bi bi-plus-lg me-2"></i>Add New MCQ
                    </button>
                </div>
            </div>

            <div class="card shadow-sm border-0 mb-4 bg-primary text-white">
                <div class="card-body p-4">
                    <div class="row align-items-center">
                        <div class="col-md-7">
                            <h5 class="fw-bold mb-1"><i class="bi bi-file-earmark-spreadsheet me-2"></i>Bulk Import Questions</h5>
                            <p class="small mb-0 opacity-75">
                                Don't have the format? 
                                <a href="/templates/question_template.csv" class="text-white fw-bold text-decoration-underline" download>
                                    <i class="bi bi-download me-1"></i>Download Template CSV
                                </a>
                            </p>
                        </div>
                        <div class="col-md-5 text-md-end mt-3 mt-md-0">
                            <form action="/admin/exams/<%= exam.exam_id %>/questions/upload" method="POST" enctype="multipart/form-data" class="d-flex gap-2">
                                <input type="file" name="csvFile" class="form-control form-control-sm border-0" accept=".csv" required>
                                <button type="submit" class="btn btn-light btn-sm fw-bold px-3">Upload</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <% if (questions.length === 0) { %>
                    <div class="col-12 text-center py-5 bg-white rounded shadow-sm">
                        <i class="bi bi-folder2-open display-1 text-muted"></i>
                        <p class="mt-3 text-muted">No questions added yet. Use the buttons above to start.</p>
                    </div>
                <% } %>

                <% questions.forEach((q, index) => { %>
                    <div class="col-12 mb-3">
                        <div class="card glass-card p-4 shadow-sm border-0">
                            <div class="d-flex justify-content-between align-items-start">
                                <h5 class="fw-bold text-dark">Q<%= index + 1 %>: <%= q.question_text %></h5>
                                <div class="d-flex align-items-center gap-2">
                                    <span class="badge bg-primary-subtle text-primary rounded-pill px-3">1 Mark</span>
                                    
                                    <button class="btn btn-sm btn-outline-primary border-0" 
                                            onclick="openEditQuestionModal('<%= q.question_id %>', '<%= q.question_text %>', '<%= q.option_a %>', '<%= q.option_b %>', '<%= q.option_c %>', '<%= q.option_d %>', '<%= q.correct_answer %>')"
                                            title="Edit Question">
                                        <i class="bi bi-pencil"></i>
                                    </button>

                                    <a href="/admin/questions/delete/<%= exam.exam_id %>/<%= q.question_id %>" 
                                       class="btn btn-sm btn-outline-danger border-0" 
                                       onclick="return confirm('Delete this specific question?')"
                                       title="Delete Question">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </div>
                            
                            <div class="row mt-3">
                                <div class="col-md-6 mb-2">
                                    <div class="p-2 border rounded <%= q.correct_answer === 'a' ? 'bg-success-subtle border-success fw-bold' : 'bg-light text-muted' %>">
                                        A: <%= q.option_a %>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-2">
                                    <div class="p-2 border rounded <%= q.correct_answer === 'b' ? 'bg-success-subtle border-success fw-bold' : 'bg-light text-muted' %>">
                                        B: <%= q.option_b %>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-2">
                                    <div class="p-2 border rounded <%= q.correct_answer === 'c' ? 'bg-success-subtle border-success fw-bold' : 'bg-light text-muted' %>">
                                        C: <%= q.option_c %>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-2">
                                    <div class="p-2 border rounded <%= q.correct_answer === 'd' ? 'bg-success-subtle border-success fw-bold' : 'bg-light text-muted' %>">
                                        D: <%= q.option_d %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="addQuestionModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">Create New Question</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form action="/admin/exams/<%= exam.exam_id %>/questions/add" method="POST">
                <div class="modal-body p-4">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Question Description</label>
                        <textarea name="question_text" class="form-control" rows="3" required></textarea>
                    </div>
                    <div class="row g-3">
                        <div class="col-md-6"><label class="small fw-bold">Option A</label><input type="text" name="option_a" class="form-control" required></div>
                        <div class="col-md-6"><label class="small fw-bold">Option B</label><input type="text" name="option_b" class="form-control" required></div>
                        <div class="col-md-6"><label class="small fw-bold">Option C</label><input type="text" name="option_c" class="form-control" required></div>
                        <div class="col-md-6"><label class="small fw-bold">Option D</label><input type="text" name="option_d" class="form-control" required></div>
                    </div>
                    <div class="mt-4">
                        <label class="form-label fw-bold text-success">Select Correct Answer</label>
                        <select name="correct_answer" class="form-select border-success" required>
                            <option value="a">Option A</option>
                            <option value="b">Option B</option>
                            <option value="c">Option C</option>
                            <option value="d">Option D</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer bg-light">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary px-4">Save Question</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="editQuestionModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title">Edit Question</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form id="editQuestionForm" method="POST">
                <div class="modal-body p-4">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Question Description</label>
                        <textarea name="question_text" id="edit_q_text" class="form-control" rows="3" required></textarea>
                    </div>
                    <div class="row g-3">
                        <div class="col-md-6"><label class="small fw-bold">Option A</label><input type="text" name="option_a" id="edit_q_a" class="form-control" required></div>
                        <div class="col-md-6"><label class="small fw-bold">Option B</label><input type="text" name="option_b" id="edit_q_b" class="form-control" required></div>
                        <div class="col-md-6"><label class="small fw-bold">Option C</label><input type="text" name="option_c" id="edit_q_c" class="form-control" required></div>
                        <div class="col-md-6"><label class="small fw-bold">Option D</label><input type="text" name="option_d" id="edit_q_d" class="form-control" required></div>
                    </div>
                    <div class="mt-4">
                        <label class="form-label fw-bold">Select Correct Answer</label>
                        <select name="correct_answer" id="edit_q_correct" class="form-select" required>
                            <option value="a">Option A</option>
                            <option value="b">Option B</option>
                            <option value="c">Option C</option>
                            <option value="d">Option D</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer bg-light">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-dark px-4">Update Question</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function openEditQuestionModal(id, text, a, b, c, d, correct) {
        // Update the form action dynamically
        document.getElementById('editQuestionForm').action = `/admin/questions/update/<%= exam.exam_id %>/${id}`;
        
        // Fill modal fields with current data
        document.getElementById('edit_q_text').value = text;
        document.getElementById('edit_q_a').value = a;
        document.getElementById('edit_q_b').value = b;
        document.getElementById('edit_q_c').value = c;
        document.getElementById('edit_q_d').value = d;
        document.getElementById('edit_q_correct').value = correct;

        // Show the modal
        new bootstrap.Modal(document.getElementById('editQuestionModal')).show();
    }
</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>