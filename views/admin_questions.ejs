<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
    <title>Question Bank | Pariksha Admin</title>
    <style>
        .breadcrumb-item a { text-decoration: none; color: #64748b; }
        .bulk-upload-card { border-radius: 15px; border: none; background: linear-gradient(90deg, #2563eb 0%, #1e40af 100%); }
        .question-card { border-radius: 12px; transition: box-shadow 0.3s ease; }
        .question-card:hover { box-shadow: 0 8px 20px rgba(0,0,0,0.08) !important; }
        .option-box { border: 1px solid #e2e8f0; border-radius: 8px; transition: all 0.2s ease; }
        .option-correct { background-color: #f0fdf4; border-color: #22c55e; color: #15803d; font-weight: 600; }
        .nav-link.active { background-color: rgba(37, 99, 235, 0.1); color: #2563eb !important; font-weight: 600; }
    </style>
</head>
<body class="bg-light">

<div class="container-fluid">
    <div class="row">
        <%- include('partials/sidebar', {currentPage: 'exams'}) %>

        <div class="col-md-10 offset-md-2 p-5">
            
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-1">
                          <li class="breadcrumb-item"><a href="/admin/exams">Exams</a></li>
                          <li class="breadcrumb-item active text-capitalize"><%= exam.exam_name %></li>
                        </ol>
                    </nav>
                    <h2 class="fw-bold text-dark">Manage Questions</h2>
                </div>
                
                <div class="d-flex gap-2">
                    <% if (questions.length > 0) { %>
                        <a href="/admin/questions/delete-all/<%= exam.exam_id %>" 
                           class="btn btn-outline-danger rounded-pill px-3 shadow-sm" 
                           onclick="return confirm('WARNING: This will permanently delete ALL questions for this exam. Continue?')">
                            <i class="bi bi-trash3 me-2"></i>Clear Bank
                        </a>
                    <% } %>
                    <button class="btn btn-primary rounded-pill shadow-sm px-4" data-bs-toggle="modal" data-bs-target="#addQuestionModal">
                        <i class="bi bi-plus-lg me-2"></i>Add New MCQ
                    </button>
                </div>
            </div>

            <div class="card bulk-upload-card shadow-sm mb-4 text-white">
                <div class="card-body p-4">
                    <div class="row align-items-center">
                        <div class="col-md-7">
                            <h5 class="fw-bold mb-1"><i class="bi bi-file-earmark-spreadsheet me-2"></i>Bulk Import via CSV</h5>
                            <p class="small mb-0 opacity-75">
                                Quickly add multiple questions using a CSV file. 
                                <a href="/templates/question_template.csv" class="text-white fw-bold text-decoration-underline ms-1" download>
                                    <i class="bi bi-download me-1"></i>Download Template
                                </a>
                            </p>
                        </div>
                        <div class="col-md-5 text-md-end mt-3 mt-md-0">
                            <form action="/admin/exams/<%= exam.exam_id %>/questions/upload" method="POST" enctype="multipart/form-data" class="d-flex gap-2">
                                <input type="file" name="csvFile" class="form-control form-control-sm border-0" accept=".csv" required>
                                <button type="submit" class="btn btn-light btn-sm fw-bold px-4 rounded-pill">Upload</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <% if (questions.length === 0) { %>
                    <div class="col-12 text-center py-5 bg-white rounded-4 shadow-sm">
                        <i class="bi bi-folder2-open display-2 text-muted opacity-50"></i>
                        <h5 class="mt-3 text-muted">No questions found</h5>
                        <p class="text-muted small">Start by adding a single MCQ or uploading a CSV file.</p>
                    </div>
                <% } %>

                <% questions.forEach((q, index) => { %>
                    <div class="col-12 mb-3">
                        <div class="card question-card p-4 shadow-sm border-0 bg-white">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div class="d-flex">
                                    <span class="badge bg-primary me-3 d-flex align-items-center justify-content-center" style="width: 35px; height: 35px; border-radius: 10px; font-size: 1rem;">
                                        <%= index + 1 %>
                                    </span>
                                    <h5 class="fw-bold text-dark mb-0 mt-1"><%= q.question_text %></h5>
                                </div>
                                <div class="d-flex align-items-center gap-1">
                                    <span class="badge bg-light text-dark border rounded-pill px-3 me-2">1 Mark</span>
                                    
                                    <button class="btn btn-sm btn-outline-primary border-0 rounded-circle" 
                                            onclick="openEditQuestionModal('<%= q.question_id %>', '<%= q.question_text %>', '<%= q.option_a %>', '<%= q.option_b %>', '<%= q.option_c %>', '<%= q.option_d %>', '<%= q.correct_answer %>')"
                                            title="Edit">
                                        <i class="bi bi-pencil-square"></i>
                                    </button>

                                    <a href="/admin/questions/delete/<%= exam.exam_id %>/<%= q.question_id %>" 
                                       class="btn btn-sm btn-outline-danger border-0 rounded-circle" 
                                       onclick="return confirm('Delete this specific question?')"
                                       title="Delete">
                                        <i class="bi bi-trash-fill"></i>
                                    </a>
                                </div>
                            </div>
                            
                            <div class="row g-3">
                                <% ['a', 'b', 'c', 'd'].forEach(opt => { 
                                    let isCorrect = q.correct_answer === opt;
                                %>
                                    <div class="col-md-6">
                                        <div class="p-3 option-box <%= isCorrect ? 'option-correct shadow-sm' : 'bg-light text-muted opacity-75' %> d-flex align-items-center">
                                            <span class="me-2 fw-bold text-uppercase"><%= opt %>:</span>
                                            <span><%= q['option_' + opt] %></span>
                                            <% if (isCorrect) { %>
                                                <i class="bi bi-check-circle-fill ms-auto text-success"></i>
                                            <% } %>
                                        </div>
                                    </div>
                                <% }) %>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="addQuestionModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header bg-primary text-white border-0">
                <h5 class="modal-title fw-bold">Create New MCQ</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form action="/admin/exams/<%= exam.exam_id %>/questions/add" method="POST">
                <div class="modal-body p-4">
                    <div class="mb-3">
                        <label class="form-label small fw-bold">Question Description</label>
                        <textarea name="question_text" class="form-control bg-light border-0 p-3" rows="3" placeholder="Type your question here..." required></textarea>
                    </div>
                    <div class="row g-3">
                        <div class="col-md-6"><label class="small fw-bold">Option A</label><input type="text" name="option_a" class="form-control bg-light border-0" required></div>
                        <div class="col-md-6"><label class="small fw-bold">Option B</label><input type="text" name="option_b" class="form-control bg-light border-0" required></div>
                        <div class="col-md-6"><label class="small fw-bold">Option C</label><input type="text" name="option_c" class="form-control bg-light border-0" required></div>
                        <div class="col-md-6"><label class="small fw-bold">Option D</label><input type="text" name="option_d" class="form-control bg-light border-0" required></div>
                    </div>
                    <div class="mt-4 p-3 bg-success bg-opacity-10 rounded-3">
                        <label class="form-label fw-bold text-success mb-2">Set Correct Answer</label>
                        <select name="correct_answer" class="form-select border-success-subtle shadow-sm" required>
                            <option value="a">Option A</option>
                            <option value="b">Option B</option>
                            <option value="c">Option C</option>
                            <option value="d">Option D</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer border-0 p-4">
                    <button type="button" class="btn btn-light px-4" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary px-5 fw-bold shadow-sm rounded-pill">Save Question</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="editQuestionModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header bg-dark text-white border-0">
                <h5 class="modal-title fw-bold">Edit Question</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form id="editQuestionForm" method="POST">
                <div class="modal-body p-4">
                    <div class="mb-3">
                        <label class="form-label small fw-bold">Question Description</label>
                        <textarea name="question_text" id="edit_q_text" class="form-control bg-light border-0 p-3" rows="3" required></textarea>
                    </div>
                    <div class="row g-3">
                        <div class="col-md-6"><label class="small fw-bold">Option A</label><input type="text" name="option_a" id="edit_q_a" class="form-control bg-light border-0" required></div>
                        <div class="col-md-6"><label class="small fw-bold">Option B</label><input type="text" name="option_b" id="edit_q_b" class="form-control bg-light border-0" required></div>
                        <div class="col-md-6"><label class="small fw-bold">Option C</label><input type="text" name="option_c" id="edit_q_c" class="form-control bg-light border-0" required></div>
                        <div class="col-md-6"><label class="small fw-bold">Option D</label><input type="text" name="option_d" id="edit_q_d" class="form-control bg-light border-0" required></div>
                    </div>
                    <div class="mt-4">
                        <label class="form-label small fw-bold">Correct Answer</label>
                        <select name="correct_answer" id="edit_q_correct" class="form-select bg-light border-0" required>
                            <option value="a">Option A</option>
                            <option value="b">Option B</option>
                            <option value="c">Option C</option>
                            <option value="d">Option D</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer border-0 p-4">
                    <button type="button" class="btn btn-light px-4" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-dark px-5 fw-bold shadow-sm rounded-pill">Update Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function openEditQuestionModal(id, text, a, b, c, d, correct) {
        document.getElementById('editQuestionForm').action = `/admin/questions/update/<%= exam.exam_id %>/${id}`;
        document.getElementById('edit_q_text').value = text;
        document.getElementById('edit_q_a').value = a;
        document.getElementById('edit_q_b').value = b;
        document.getElementById('edit_q_c').value = c;
        document.getElementById('edit_q_d').value = d;
        document.getElementById('edit_q_correct').value = correct;
        new bootstrap.Modal(document.getElementById('editQuestionModal')).show();
    }
</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>