<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
    <title>Exam Results | Pariksha Admin</title>
    <style>
        .table thead th { 
            font-size: 0.85rem; 
            text-transform: uppercase; 
            letter-spacing: 0.5px; 
            color: #64748b; 
            background-color: #f8fafc;
        }
        .avatar-circle { 
            width: 38px; 
            height: 38px; 
            background: #eff6ff; 
            display: flex; 
            align-items: center; 
            justify-content: center; 
            border-radius: 10px; 
            color: #2563eb; 
            font-weight: 700;
            border: 1px solid #dbeafe;
        }
        .score-text {
            font-size: 1.1rem;
            color: #1e293b;
        }
    </style>
</head>
<body class="bg-light">
<div class="container-fluid">
    <div class="row">
        <%- include('partials/sidebar', {currentPage: 'results'}) %>

        <div class="col-md-10 offset-md-2 p-5">
            <div class="mb-5">
                <h2 class="fw-bold text-dark mb-1">Student Performance</h2>
                <p class="text-muted mb-0">Review all completed exam attempts and grades.</p>
            </div>

            <div class="card border-0 shadow-sm overflow-hidden rounded-4">
                <table class="table mb-0 align-middle table-hover bg-white">
                    <thead>
                        <tr>
                            <th class="ps-4 py-3 border-0">Student</th>
                            <th class="border-0">Class/Course</th>
                            <th class="border-0">Exam Title</th>
                            <th class="border-0">Total Score</th>
                            <th class="border-0">Submission Date</th>
                            <th class="text-end pe-4 border-0">Status</th>
                        </tr>
                    </thead>
                    <tbody class="border-top-0">
                        <% if (results.length === 0) { %>
                            <tr>
                                <td colspan="6" class="text-center py-5">
                                    <div class="text-muted">
                                        <i class="bi bi-clipboard-x display-6"></i>
                                        <p class="mt-2">No results recorded yet.</p>
                                    </div>
                                </td>
                            </tr>
                        <% } %>
                        
                        <% results.forEach(r => { %>
                        <tr>
                            <td class="ps-4 py-3">
                                <div class="d-flex align-items-center">
                                    <div class="avatar-circle me-3">
                                        <%= r.first_name.charAt(0) %><%= r.last_name.charAt(0) %>
                                    </div>
                                    <div>
                                        <div class="fw-bold text-dark"><%= r.first_name %> <%= r.last_name %></div>
                                        <div class="small text-muted">Roll No: <%= r.roll_no || 'N/A' %></div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <span class="text-dark fw-medium"><%= r.class_name || 'â€”' %></span>
                            </td>
                            <td>
                                <div class="fw-semibold text-primary"><%= r.exam_name %></div>
                            </td>
                            <td>
                                <div class="score-text fw-bold">
                                    <%= r.score %> <span class="text-muted fw-normal" style="font-size: 0.9rem;">/ <%= r.total_questions %></span>
                                </div>
                            </td>
                            <td>
                                <div class="small text-dark">
                                    <i class="bi bi-calendar-event me-1 text-muted"></i>
                                    <%= new Date(r.submitted_at).toLocaleDateString('en-GB', { day: '2-digit', month: 'short', year: 'numeric' }) %>
                                </div>
                                <div class="text-muted" style="font-size: 0.75rem;">
                                    <i class="bi bi-clock me-1"></i>
                                    <%= new Date(r.submitted_at).toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' }) %>
                                </div>
                            </td>
                            <td class="text-end pe-4">
                                <% if (r.status === 'PASSED') { %>
                                    <span class="badge bg-success bg-opacity-10 text-success border border-success-subtle rounded-pill px-3 py-2">
                                        <i class="bi bi-check-circle-fill me-1"></i> PASSED
                                    </span>
                                <% } else { %>
                                    <span class="badge bg-danger bg-opacity-10 text-danger border border-danger-subtle rounded-pill px-3 py-2">
                                        <i class="bi bi-x-circle-fill me-1"></i> FAILED
                                    </span>
                                <% } %>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>