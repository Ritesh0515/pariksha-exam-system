<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
    <title>Exam Results | Pariksha Admin</title>
</head>
<body>
<div class="container-fluid">
    <div class="row">
        <%- include('partials/sidebar', {currentPage: 'results'}) %>

        <div class="col-md-10 offset-md-2 p-5">
            <div class="mb-4">
                <h2 class="fw-bold">Student Performance</h2>
                <p class="text-muted">Review all completed exam attempts across the platform.</p>
            </div>

            <div class="card glass-card border-0 shadow-sm overflow-hidden">
                <table class="table mb-0 align-middle">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Student Info</th>
                            <th>Class/Course</th>
                            <th>Exam Title</th>
                            <th>Score</th>
                            <th>Date & Time</th>
                            <th class="text-end pe-4">Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (results.length === 0) { %>
                            <tr>
                                <td colspan="6" class="text-center py-5 text-muted">No results found yet.</td>
                            </tr>
                        <% } %>
                        
                        <% results.forEach(r => { %>
                        <tr>
                            <td class="ps-4">
                                <div class="fw-bold"><%= r.first_name %> <%= r.last_name %></div>
                                <div class="small text-primary fw-semibold">Roll No: <%= r.roll_no || 'N/A' %></div>
                            </td>
                            <td>
                                <span class="text-muted small"><%= r.class_name || 'Not Assigned' %></span>
                            </td>
                            <td><span class="badge bg-primary-subtle text-primary"><%= r.exam_name %></span></td>
                            <td class="fw-bold"><%= r.score %> / <%= r.total_questions %></td>
                            <td class="small text-muted">
                                <%= new Date(r.submitted_at).toLocaleString() %>
                            </td>
                            <td class="text-end pe-4">
                                <span class="badge <%= r.status === 'PASSED' ? 'bg-success' : 'bg-danger' %> rounded-pill px-3">
                                    <%= r.status %>
                                </span>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>