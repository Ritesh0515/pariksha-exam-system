<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
    <title>Manage Subjects | Pariksha Admin</title>
    <style>
        .glass-card { transition: all 0.3s ease; }
        .subject-code-pill {
            background-color: #eff6ff;
            color: #2563eb;
            font-weight: 700;
            padding: 4px 12px;
            border-radius: 8px;
            border: 1px solid #dbeafe;
            font-family: 'Monaco', 'Consolas', monospace;
        }
        .year-badge {
            font-size: 0.75rem;
            padding: 5px 10px;
            border-radius: 6px;
            font-weight: 600;
        }
        .nav-pills .nav-link {
            color: #64748b;
            font-weight: 600;
            padding: 10px 20px;
            border-radius: 12px;
        }
        .nav-pills .nav-link.active {
            background-color: #2563eb;
            box-shadow: 0 4px 12px rgba(37, 99, 235, 0.2);
        }
        .table thead th { 
            font-size: 0.8rem; 
            text-transform: uppercase; 
            letter-spacing: 1px; 
            color: #64748b;
        }
    </style>
</head>
<body class="bg-light">
<div class="container-fluid">
    <div class="row">
        <%- include('partials/sidebar', {currentPage: 'subjects'}) %>

        <div class="col-md-10 offset-md-2 p-5">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="fw-bold text-dark mb-0">Subject Management</h2>
                    <p class="text-muted small">Categorized curriculum by Year and Course.</p>
                </div>
                <% if (user.role !== 'staff') { %>
                    <button class="btn btn-primary shadow-sm px-4 rounded-pill" data-bs-toggle="collapse" data-bs-target="#addSubjectForm">
                        <i class="bi bi-plus-lg me-2"></i>Add Subject
                    </button>
                <% } %>
            </div>

            <% if (user.role !== 'staff') { %>
            <div class="collapse mb-5" id="addSubjectForm">
                <div class="card glass-card p-4 border-0 shadow-sm border-top border-4 border-primary">
                    <h5 class="fw-bold mb-3">Create New Subject</h5>
                    <form action="/admin/subjects/add" method="POST" class="row g-3">
                        <div class="col-md-3">
                            <label class="form-label small fw-bold">Subject Name</label>
                            <input type="text" name="subject_name" class="form-control bg-light border-0 p-2" placeholder="e.g. Java Programming" required>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label small fw-bold">Subject Code</label>
                            <input type="text" name="subject_code" class="form-control bg-light border-0 p-2" placeholder="BCA-301" required>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label small fw-bold">Academic Year</label>
                            <select name="year" class="form-select bg-light border-0 p-2" required>
                                <option value="FY">FY (First Year)</option>
                                <option value="SY">SY (Second Year)</option>
                                <option value="TY">TY (Third Year)</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label small fw-bold">Assign Course</label>
                            <select name="course_id" class="form-select bg-light border-0 p-2">
                                <% courses.forEach(c => { %>
                                    <option value="<%= c.course_id %>"><%= c.course_name %></option>
                                <% }) %>
                            </select>
                        </div>
                        <div class="col-md-2 d-flex align-items-end">
                            <button type="submit" class="btn btn-success w-100 shadow-sm fw-bold p-2">
                                <i class="bi bi-check-lg me-1"></i>Save
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            <% } %>

            <ul class="nav nav-pills mb-4" id="subjectTabs" role="tablist">
                <li class="nav-item">
                    <button class="nav-link active" id="fy-tab" data-bs-toggle="pill" data-bs-target="#fy-content">FY Subjects</button>
                </li>
                <li class="nav-item ms-2">
                    <button class="nav-link" id="sy-tab" data-bs-toggle="pill" data-bs-target="#sy-content">SY Subjects</button>
                </li>
                <li class="nav-item ms-2">
                    <button class="nav-link" id="ty-tab" data-bs-toggle="pill" data-bs-target="#ty-content">TY Subjects</button>
                </li>
            </ul>

            <div class="tab-content" id="subjectTabsContent">
                <% ['FY', 'SY', 'TY'].forEach(yearCode => { %>
                    <div class="tab-pane fade <%= yearCode === 'FY' ? 'show active' : '' %>" id="<%= yearCode.toLowerCase() %>-content">
                        <div class="card border-0 shadow-sm overflow-hidden rounded-4">
                            <table class="table mb-0 align-middle table-hover bg-white">
                                <thead class="bg-light">
                                    <tr>
                                        <th class="ps-4 py-3">Code</th>
                                        <th>Subject Name</th>
                                        <th>Course</th>
                                        <th class="text-end pe-4">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% 
                                        const filtered = subjects.filter(s => s.year === yearCode);
                                        if (filtered.length > 0) { 
                                            filtered.forEach(s => { 
                                    %>
                                    <tr>
                                        <td class="ps-4">
                                            <span class="subject-code-pill small"><%= s.subject_code %></span>
                                        </td>
                                        <td class="fw-semibold text-dark"><%= s.subject_name %></td>
                                        <td>
                                            <span class="badge bg-primary bg-opacity-10 text-primary border border-primary-subtle px-3 py-2">
                                                <i class="bi bi-mortarboard me-1"></i><%= s.course_name %>
                                            </span>
                                        </td>
                                        <td class="text-end pe-4">
                                            <% if (user.role !== 'staff') { %>
                                                <div class="btn-group shadow-sm">
                                                    <button class="btn btn-sm btn-white border px-3" 
                                                        onclick="openSubjectModal('<%= s.subject_id %>', '<%= s.subject_name %>', '<%= s.subject_code %>', '<%= s.course_id %>', '<%= s.year %>')" title="Edit">
                                                        <i class="bi bi-pencil-square text-primary"></i>
                                                    </button>
                                                    <button class="btn btn-sm btn-outline-danger px-3" 
                                                        onclick="handleSubjectDelete('<%= s.subject_id %>')" title="Delete">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </div>
                                            <% } else { %>
                                                <span class="text-muted x-small italic">Restricted</span>
                                            <% } %>
                                        </td>
                                    </tr>
                                    <% })} else { %>
                                    <tr>
                                        <td colspan="4" class="text-center py-5">
                                            <p class="text-muted mb-0">No <%= yearCode %> subjects found.</p>
                                        </td>
                                    </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="editSubjectModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header bg-primary text-white border-0">
                <h5 class="modal-title fw-bold">Update Subject</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form id="editSubjectForm" method="POST">
                <div class="modal-body p-4">
                    <div class="mb-3">
                        <label class="form-label small fw-bold">Subject Name</label>
                        <input type="text" name="subject_name" id="edit_sub_name" class="form-control bg-light border-0 p-2" required>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label small fw-bold">Subject Code</label>
                            <input type="text" name="subject_code" id="edit_sub_code" class="form-control bg-light border-0 p-2" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label small fw-bold">Academic Year</label>
                            <select name="year" id="edit_year" class="form-select bg-light border-0 p-2" required>
                                <option value="FY">FY</option>
                                <option value="SY">SY</option>
                                <option value="TY">TY</option>
                            </select>
                        </div>
                    </div>
                    <div class="mb-2">
                        <label class="form-label small fw-bold">Change Course</label>
                        <select name="course_id" id="edit_course_id" class="form-select bg-light border-0 p-2">
                            <% courses.forEach(c => { %>
                                <option value="<%= c.course_id %>"><%= c.course_name %></option>
                            <% }) %>
                        </select>
                    </div>
                </div>
                <div class="modal-footer border-0 p-4">
                    <button type="button" class="btn btn-light px-4 rounded-pill" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary px-4 fw-bold shadow-sm rounded-pill">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    // 1. Modal Logic
    function openSubjectModal(id, name, code, courseId, year) {
        document.getElementById('edit_sub_name').value = name;
        document.getElementById('edit_sub_code').value = code;
        document.getElementById('edit_course_id').value = courseId;
        document.getElementById('edit_year').value = year;
        document.getElementById('editSubjectForm').action = '/admin/subjects/update/' + id;
        new bootstrap.Modal(document.getElementById('editSubjectModal')).show();
    }

    // 2. Smart Deletion Logic
    function handleSubjectDelete(id) {
        Swal.fire({
            title: 'Are you sure?',
            text: "Deleting this subject may affect existing exams linked to it.",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = '/admin/subjects/delete/' + id;
            }
        });
    }

    // 3. Success Popup handling (if you update server.js to redirect with ?success=deleted_sub)
    const urlParams = new URLSearchParams(window.location.search);
    if (urlParams.get('success') === 'deleted_sub') {
        Swal.fire({ icon: 'success', title: 'Removed', text: 'Subject deleted successfully', timer: 1500, showConfirmButton: false });
    }
</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>