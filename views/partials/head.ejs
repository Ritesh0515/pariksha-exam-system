<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

<style>
    :root {
        --primary-blue: #1E3A8A;
        --secondary-sage: #10B981;
        --success-green: #059669;
        --warning-orange: #D97706;
        --danger-red: #DC2626;
        --bg-light: #F8FAFC;
        --text-dark: #1F2937;
    }

    body { 
        font-family: 'Inter', sans-serif; 
        background-color: var(--bg-light); 
        color: var(--text-dark);
    }

    .glass-card {
        background: white;
        border: 1px solid #E2E8F0;
        border-radius: 12px;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    }

    .btn-primary { background-color: var(--primary-blue); border: none; }
    .btn-primary:hover { background-color: #1e40af; }
    
    .btn-success { background-color: var(--secondary-sage); border: none; }
    .btn-success:hover { background-color: #0d9488; }

    .sidebar {
        height: 100vh;
        background: var(--primary-blue);
        color: white;
        position: fixed;
    }
    
    .nav-link { color: rgba(255,255,255,0.8); transition: 0.3s; }
    .nav-link:hover, .nav-link.active { color: white; background: rgba(255,255,255,0.1); border-radius: 8px; }
</style>