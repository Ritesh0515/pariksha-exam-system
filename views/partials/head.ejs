<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

<style>
    :root {
        /* Reverted to your original Midnight Blue */
        --primary-blue: #1E3A8A; 
        --primary-hover: #172e6e;
        --bg-light: #F8FAFC;
        --text-dark: #1F2937;
        --border-color: #E2E8F0;
    }

    body { 
        font-family: 'Inter', sans-serif; 
        background-color: var(--bg-light); 
        color: var(--text-dark);
    }

    .glass-card {
        background: white;
        border: 1px solid var(--border-color);
        border-radius: 12px;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    }

    .btn-primary { background-color: var(--primary-blue); border: none; border-radius: 8px; }
    .btn-primary:hover { background-color: var(--primary-hover); }
    
    /* Sidebar Styling - Back to Dark Blue */
    .sidebar {
        height: 100vh;
        background: var(--primary-blue);
        color: white;
        position: fixed;
        padding: 1.5rem;
    }
    
    .sidebar .nav-link { 
        color: rgba(255,255,255,0.7); 
        padding: 12px 16px;
        border-radius: 8px;
        margin-bottom: 5px;
        transition: 0.3s; 
    }
    
    .sidebar .nav-link:hover { 
        color: white; 
        background: rgba(255,255,255,0.1); 
    }

    .sidebar .nav-link.active { 
        color: white; 
        background: rgba(255,255,255,0.2); 
        font-weight: 600;
    }

    .sidebar hr { border-color: rgba(255,255,255,0.2); }
</style>