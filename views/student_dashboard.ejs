<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partials/head') %>
        <title>Student Dashboard | Pariksha</title>
</head>

<body class="bg-light">

    <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: var(--primary-blue);">
        <div class="container">
            <a class="navbar-brand fw-bold" href="#">
                <i class="bi bi-pen me-2"></i>Pariksha <span class="badge bg-white text-primary small">Student</span>
            </a>
            <div class="d-flex align-items-center text-white">
                <span class="me-3">
                    <%= user.first_name %>
                        <%= user.last_name %>
                </span>
                <a href="/logout" class="btn btn-sm btn-outline-light rounded-pill">Logout</a>
            </div>
            <div class="d-flex align-items-center text-white">
                <span class="me-3">
                    <%= user.first_name %>
                </span>
                <a href="/student/history" class="btn btn-sm btn-warning me-2 rounded-pill">My History</a>
                <a href="/logout" class="btn btn-sm btn-outline-light rounded-pill">Logout</a>
            </div>
        </div>
    </nav>

    <div class="container py-5">
        <div class="row mb-4">
            <div class="col-md-8">
                <h2 class="fw-bold text-dark">Available Exams</h2>
                <p class="text-muted">Select an exam below to start your assessment.</p>
            </div>
        </div>

        <div class="row">
            <% if (exams.length===0) { %>
                <div class="col-12 text-center py-5">
                    <div class="text-muted display-1"><i class="bi bi-emoji-smile-upside-down"></i></div>
                    <h4 class="mt-3">No exams available yet!</h4>
                    <p>Relax and check back later.</p>
                </div>
                <% } %>

                    <% exams.forEach(exam=> { %>
                        <div class="col-md-4 mb-4">
                            <div class="card glass-card h-100 border-0 shadow-sm hover-shadow">
                                <div class="card-body p-4">
                                    <div class="d-flex justify-content-between align-items-start mb-3">
                                        <span class="badge bg-primary-subtle text-primary rounded-pill">
                                            <%= exam.subject_name %>
                                        </span>
                                        <small class="text-muted"><i class="bi bi-clock me-1"></i>
                                            <%= exam.duration_minutes %> mins
                                        </small>
                                    </div>

                                    <h5 class="fw-bold mb-2">
                                        <%= exam.exam_name %>
                                    </h5>
                                    <p class="text-muted small mb-4">
                                        Total Marks: <%= exam.total_marks %> <br>
                                            Pass Marks: <%= exam.pass_marks %>
                                    </p>

                                    <div class="d-grid">
                                        <a href="/student/exam/<%= exam.exam_id %>/start" class="btn btn-primary">
                                            Start Exam <i class="bi bi-arrow-right ms-2"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% }) %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        .hover-shadow:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1) !important;
            transition: 0.3s;
        }
    </style>
</body>

</html>